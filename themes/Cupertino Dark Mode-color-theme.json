{
  "type": "dark",
  "colors": {
    // Background and editor colors
    "editor.background": "#1A202C", // Deep blue-gray for focus and calm
    "editor.foreground": "#ECEFF4", // Soft neutral white for readability
    "editorLineNumber.foreground": "#5C6670", // Muted gray for unobtrusive line numbers
    "editorLineNumber.activeForeground": "#88C0D0", // Teal for active line focus
    "editor.selectionBackground": "#3B4252", // Balanced blue-gray for selection
    "editor.selectionHighlightBackground": "#3B425280", // Slight transparency for highlights
    "editorCursor.foreground": "#EBCB8B", // Golden yellow for precision and focus
    "editor.findMatchBackground": "#D0877080", // Warm orange for match highlights
    "editor.findMatchHighlightBackground": "#BF616A50", // Subtle red for secondary matches

    // Activity bar and sidebar colors
    "activityBar.background": "#2E3440", // Deep gray-blue for structure
    "activityBar.foreground": "#ECEFF4", // Soft white for icons
    "activityBarBadge.background": "#81A1C1", // Calming blue badge
    "activityBarBadge.foreground": "#2E3440", // Contrast for badge text
    "sideBar.background": "#1A202C",
    "sideBar.foreground": "#ECEFF4",
    "sideBarSectionHeader.background": "#3B4252",

    // Status bar colors
    "statusBar.background": "#2E3440",
    "statusBar.foreground": "#ECEFF4",
    "statusBar.debuggingBackground": "#BF616A", // Red for debugging mode
    "statusBar.debuggingForeground": "#ECEFF4",

    // Terminal colors
    "terminal.background": "#1A202C",
    "terminal.foreground": "#ECEFF4",
    "terminalCursor.foreground": "#EBCB8B", // Gold for focus

    // Dropdown and input box colors
    "dropdown.background": "#3B4252",
    "input.background": "#434C5E",
    "input.foreground": "#ECEFF4"
  },
  "tokenColors": [
    {
      "scope": "comment",
      "settings": {
        "foreground": "#4C566A", // Subtle gray-blue for quiet comments
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["string", "constant.language"],
      "settings": {
        "foreground": "#8FBCBB" // Teal for natural flow and rejuvenation
      }
    },
    {
      "scope": "keyword",
      "settings": {
        "foreground": "#B48EAD", // Purple for importance and creativity
        "fontStyle": "bold"
      }
    },
    {
      "scope": "variable",
      "settings": {
        "foreground": "#EBCB8B" // Gold for elegance and focus
      }
    },
    {
      "scope": "function",
      "settings": {
        "foreground": "#88C0D0" // Calming blue for functionality
      }
    },
    {
      "scope": "type",
      "settings": {
        "foreground": "#81A1C1" // Soft blue for structure
      }
    },
    {
      "scope": "storage",
      "settings": {
        "foreground": "#B48EAD" // Purple for storage-related operations
      }
    },
    {
      "scope": "invalid",
      "settings": {
        "foreground": "#BF616A",
        
      }
    }
  ]
}
