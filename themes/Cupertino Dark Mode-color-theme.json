{
  "type": "dark",
  "colors": {
    // Editor and background colors
    "editor.background": "#131921", // Deep blue-black for mystery
    "editor.foreground": "#E0E0E0", // Soft white for readability
    "editorLineNumber.foreground": "#536B78", // Muted teal for line numbers
    "editorLineNumber.activeForeground": "#A3D5D3", // Softer teal for active line
    "editor.selectionBackground": "#2E4057", // Soothing deep blue for selection
    "editor.selectionHighlightBackground": "#2E405780", // Slight transparency for subtle selection highlight
    "editorCursor.foreground": "#FFD700", // Golden accent for cursor

    // Activity bar and sidebar colors
    "activityBar.background": "#1C2A36", // Deep teal
    "activityBar.foreground": "#D8DEE9", // Soft light gray
    "activityBarBadge.background": "#A163E5", // Purple accent
    "activityBarBadge.foreground": "#FFFFFF",
    "sideBar.background": "#131921",
    "sideBar.foreground": "#C5C8D3",
    "sideBarSectionHeader.background": "#1C2A36",

    // Status bar colors
    "statusBar.background": "#1C2A36",
    "statusBar.foreground": "#D8DEE9",

    // Terminal colors
    "terminal.background": "#131921",
    "terminal.foreground": "#D8DEE9",
    "terminalCursor.foreground": "#A163E5", // Purple cursor for mystery

    // Dropdown and input box colors
    "dropdown.background": "#1C2A36",
    "input.background": "#1E2933",
    "input.foreground": "#D8DEE9"
  },
  "tokenColors": [
    {
      "scope": "comment",
      "settings": {
        "foreground": "#536B78", // Muted teal for comments
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["string", "constant.language"],
      "settings": {
        "foreground": "#A3D5D3" // Soft teal for strings
      }
    },
    {
      "scope": "keyword",
      "settings": {
        "foreground": "#A163E5", // Deep purple for keywords
        "fontStyle": "bold"
      }
    },
    {
      "scope": "variable",
      "settings": {
        "foreground": "#FFC078" // Warm peach for variables
      }
    },
    {
      "scope": "function",
      "settings": {
        "foreground": "#5FB3B3" // Calming teal for functions
      }
    },
    {
      "scope": "type",
      "settings": {
        "foreground": "#81A1C1" // Soft blue for types
      }
    },
    {
      "scope": "storage",
      "settings": {
        "foreground": "#A163E5" // Purple for storage keywords
      }
    },
    {
      "scope": "invalid",
      "settings": {
        "foreground": "#FF6F61",
        
      }
    }
  ]
}
