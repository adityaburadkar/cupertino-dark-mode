{
  "type": "dark",
  "colors": {
    "editor.background": "#202225", // Deep charcoal for focus
    "editor.foreground": "#EDEDED", // Neutral light gray for text
    "editorLineNumber.foreground": "#5A5D62", // Muted gray for unobtrusive line numbers
    "editorLineNumber.activeForeground": "#A6A6A6", // Slightly lighter gray for the active line number
    "editor.selectionBackground": "#3C3F41", // Subtle gray for selection
    "editor.selectionHighlightBackground": "#4C4F5180", // Slightly darker gray for secondary highlights
    "editorCursor.foreground": "#FFA94D", // Warm orange for precision
    "activityBar.background": "#26292C", // Slightly darker charcoal for the activity bar
    "activityBar.foreground": "#EDEDED",
    "activityBarBadge.background": "#FF8800", // Vibrant orange for badges
    "activityBarBadge.foreground": "#202225",
    "sideBar.background": "#202225",
    "sideBar.foreground": "#EDEDED",
    "sideBarSectionHeader.background": "#26292C",
    "statusBar.background": "#26292C",
    "statusBar.foreground": "#EDEDED",
    "statusBar.debuggingBackground": "#FF8800",
    "statusBar.debuggingForeground": "#202225",
    "terminal.background": "#202225",
    "terminal.foreground": "#EDEDED",
    "terminalCursor.foreground": "#FFA94D",
    "dropdown.background": "#2E3135",
    "input.background": "#2C2F33",
    "input.foreground": "#EDEDED",
    "scrollbarSlider.background": "#3C3F41",
    "scrollbarSlider.hoverBackground": "#4C4F51",
    "scrollbarSlider.activeBackground": "#5C5F61"
  },
  "tokenColors": [
    {
      "scope": "comment",
      "settings": {
        "foreground": "#606366", // Muted gray for comments
        "fontStyle": "italic"
      }
    },
    {
      "scope": ["string", "constant.language"],
      "settings": {
        "foreground": "#8AC149" // Blender's vibrant green for strings
      }
    },
    {
      "scope": "keyword",
      "settings": {
        "foreground": "#FFA94D", // Blender's bright orange for keywords
        "fontStyle": "bold"
      }
    },
    {
      "scope": "variable",
      "settings": {
        "foreground": "#59ABE3" // Blender's light blue for variables
      }
    },
    {
      "scope": "function",
      "settings": {
        "foreground": "#7A67E0" // Blender's purple for functions
      }
    },
    {
      "scope": "type",
      "settings": {
        "foreground": "#59ABE3" // Consistent light blue for types
      }
    },
    {
      "scope": "storage",
      "settings": {
        "foreground": "#FFA94D" // Vibrant orange for storage
      }
    },
    {
      "scope": "invalid",
      "settings": {
        "foreground": "#FF4E50", // Red for errors
        "fontStyle": "bold"
      }
    }
  ]
}
